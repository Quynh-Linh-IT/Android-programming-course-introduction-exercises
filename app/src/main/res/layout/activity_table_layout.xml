<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaiTap1.TableLayoutActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="205dp"
                        android:layout_height="350dp"
                        android:layout_weight="1"
                        android:background="@color/color_main"></TextView>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="205dp"
                        android:layout_height="350dp"
                        android:layout_weight="1"
                        android:background="@color/purple_200"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="220dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@color/color_btn"></TextView>
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="220dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@color/purple_700"></TextView>
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="220dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:background="@color/teal_700"></TextView>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@color/color_main"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></SeekBar>
            </TableRow>
        </LinearLayout>
    </ScrollView>
</TableLayout>