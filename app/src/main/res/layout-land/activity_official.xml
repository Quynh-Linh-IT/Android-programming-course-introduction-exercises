<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaiTap4.OfficialActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:background="@color/purple_200"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_nameBangPhoto"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font"
                    android:text="Los Angeles, CA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/tv_maZipBangPhoto"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font"
                    android:text=" 90001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bg_photo"
                android:background="@color/teal_200"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_office"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font"
                    android:text="United States Senate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_nameOfficial"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/font"
                        android:text="Tammy Duckworth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_partisan"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/font"
                        android:text="(Democratic)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/font"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Address:"
                                android:paddingRight="10dp"
                                android:textSize="15sp">
                            </TextView>
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ListView
                                        android:layout_width="wrap_content"
                                        android:layout_height="130dp"
                                        android:id="@+id/listViewOfficialsAddress">
                                    </ListView>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/font"
                                android:text="Phone : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:layout_gravity="center"
                                android:id="@+id/tv_phone"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/font"
                                android:text="(202) - 2854"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/font"
                                android:text="Email : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:layout_gravity="center"
                                android:id="@+id/tv_email"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/font"
                                android:text="No data provided"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/font"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Website:"
                                android:paddingRight="10dp"
                                android:textSize="15sp">
                            </TextView>
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ListView
                                        android:layout_width="wrap_content"
                                        android:layout_height="130dp"
                                        android:id="@+id/listViewOfficialsWebsite">
                                    </ListView>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img_anhOfficial"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/spinner_1s_200px"
                        android:layout_width="100dp"
                        android:layout_height="100dp"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_youtobe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/icon_youtobe"
                        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

                    <ImageButton
                        android:id="@+id/btn_google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/icon_google"
                        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

                    <ImageButton
                        android:id="@+id/btn_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/icon_facebook"
                        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

                    <ImageButton
                        android:id="@+id/btn_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/icon_twitter"
                        tools:ignore="SpeakableTextPresentCheck"></ImageButton>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>